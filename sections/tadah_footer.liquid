{
  "name": "Footer",
  "settings": [
    {
    "type": "text",
    "id": "title-footer",
    "label": "Title Footer"
    }
  ],
  "blocks" :[
    {
       "type":"slide",
       "name":"Social Network",
       "settings" : [
          {
          "type": "url",
          "id": "url-social-media",
          "label": "Url Social Media"
          },
          {
            "type" : "image_picker",
            "id" : "icon-media",
            "label" : "Icon Social Media"
