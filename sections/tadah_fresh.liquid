{{ 'fresh_tadah.css' | asset_url | stylesheet_tag }}
<!-- *********** fresh_tadah ********* -->

<section class="fresh_tadah global_style">
  <div class="content_fresh">
    <div class="item_fresh_tadah ">
      {{ section.settings.image | image_url: width: number | image_tag:  class: 'image_fresh', loading: 'lazy' }}
    </div>
    <div class="item_fresh_tadah">
      <h2 class="title_fresh">{{ section.settings.title-fresh }}</h2>
      <p class="text_fresh">
        {{ section.settings.text-fresh }}
      </p>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Section Fresh",
  "settings": [
    {
      "type": "text",
      "id" : "title-fresh",
      "label" : "Title"
    },
    {
      "type": "text",
      "id" : "text-fresh",
      "label" : "Text"
    },
    {
       "type": "image_picker",
       "id": "image",
       "label": "Image"
     }
  ]
}
{% endschema %}

